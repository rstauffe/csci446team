<h1>Listing items</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Has been swapped?</th>
	  <th>Owner ID</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.image %></td>
		<% if item.is_used %>
        <td>Yes</td>
		<% else %>
		<td>No</td>
		<% end %>
		<td><%= item.user_id %></td>
		<% if current_user %>
			<% if item.user_id == current_user.id %>
				<td><%= link_to 'Show', item %></td>
				<td><%= link_to 'Edit', edit_item_path(item) %></td>
				<td><%= link_to 'Remove', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			<% end %>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

